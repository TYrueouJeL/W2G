<Button     x:Class="W2G.WPF.Core.PageButton"
            x:Name="Control"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:icn="http://metro.mahapps.com/winfx/xaml/iconpacks"
            xmlns:local="clr-namespace:W2G.WPF" 
            mc:Ignorable="d" Style="{StaticResource MahApps.Styles.Button.MetroSquare.Accent}" 
            Margin="5" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
            d:DesignHeight="50" d:DesignWidth="150">
    <StackPanel Orientation="Horizontal">
        <icn:PackIconMaterial Kind="{Binding ElementName=Control, Path=Kind}"   Margin="5" Width="15" Height="15"   VerticalAlignment="Center"/>
        <TextBlock            Text="{Binding ElementName=Control, Path=Label}"  FontSize="10" Margin="5"            VerticalAlignment="Center"/>
    </StackPanel>
</Button>
