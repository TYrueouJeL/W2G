<mah:MetroWindow    x:Class="W2G.WPF.MainWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                    xmlns:icn="http://metro.mahapps.com/winfx/xaml/iconpacks"
                    xmlns:local="clr-namespace:W2G.WPF"
                    mc:Ignorable="d"
                    Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="50"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <UniformGrid Grid.Column="2" Grid.Row="0" Rows="1" x:Name="UG_Module">
            <Button x:Name="Btn_Admin" Style="{DynamicResource BtnModule}" Click="Btn_Module_Click">
                <StackPanel Orientation="Horizontal">
                    <icn:PackIconMaterial Kind="Console" Margin="5" Height="20" Width="20" VerticalAlignment="Center"/>
                    <TextBlock Text="Administration" Margin="5" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button x:Name="Btn_Tech" Style="{DynamicResource BtnModule}" Margin="5" HorizontalAlignment="Stretch" Click="Btn_Module_Click">
                <StackPanel Orientation="Horizontal">
                    <icn:PackIconMaterial Kind="Tools" Margin="5" Height="20" Width="20" VerticalAlignment="Center"/>
                    <TextBlock Text="Technique" Margin="5" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button x:Name="Btn_Compta" Style="{DynamicResource BtnModule}" Margin="5" HorizontalAlignment="Stretch" Click="Btn_Module_Click">
                <StackPanel Orientation="Horizontal">
                    <icn:PackIconMaterial Kind="Calculator" Margin="5" Height="20" Width="20" VerticalAlignment="Center"/>
                    <TextBlock Text="Comptabilité" Margin="5" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </UniformGrid>

        <ContentControl Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" x:Name="CCtrl_Module"/>
    </Grid>
</mah:MetroWindow>
