<UserControl x:Class="W2G.WPF.Modules.AdminMod"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:icn="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:W2G.WPF.Modules"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="100"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" x:Name="UG_Module">
            <Button x:Name="Btn_Admin" Style="{DynamicResource BtnPage}" Margin="5" HorizontalAlignment="Stretch" Click="Btn_Page_Click">
                <StackPanel Orientation="Horizontal">
                    <icn:PackIconMaterial Kind="Console" Margin="5" Height="20" Width="20" VerticalAlignment="Center"/>
                    <TextBlock Text="Administration" Margin="5" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button x:Name="Btn_Tech" Style="{DynamicResource BtnPage}" Margin="5" HorizontalAlignment="Stretch" Click="Btn_Page_Click">
                <StackPanel Orientation="Horizontal">
                    <icn:PackIconMaterial Kind="Tools" Margin="5" Height="20" Width="20" VerticalAlignment="Center"/>
                    <TextBlock Text="Technique" Margin="5" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button x:Name="Btn_Compta" Style="{DynamicResource BtnPage}" Margin="5" HorizontalAlignment="Stretch" Click="Btn_Page_Click">
                <StackPanel Orientation="Horizontal">
                    <icn:PackIconMaterial Kind="Calculator" Margin="5" Height="20" Width="20" VerticalAlignment="Center"/>
                    <TextBlock Text="Comptabilité" Margin="5" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <ContentControl Grid.Row="2" x:Name="CCtrl_Module"/>
    </Grid>
</UserControl>
