<UserControl x:Class="W2G.WPF.Modules.TechMod"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:icn="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:W2G.WPF.Modules"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" x:Name="UG_Module">
            <Button x:Name="Btn_Bay" Style="{DynamicResource BtnPage}" Margin="5" HorizontalAlignment="Stretch" Click="Btn_Tech_Click">
                <StackPanel Orientation="Horizontal">
                    <icn:PackIconMaterial Kind="Folder" Margin="5" Height="20" Width="20" VerticalAlignment="Center"/>
                    <TextBlock Text="Baies" Margin="5" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button x:Name="Btn_Unit" Style="{DynamicResource BtnPage}" Margin="5" HorizontalAlignment="Stretch" Click="Btn_Tech_Click">
                <StackPanel Orientation="Horizontal">
                    <icn:PackIconMaterial Kind="File" Margin="5" Height="20" Width="20" VerticalAlignment="Center"/>
                    <TextBlock Text="Unités" Margin="5" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <ContentControl Grid.Column="2" x:Name="CCtrl_Page"/>
    </Grid>
</UserControl>
